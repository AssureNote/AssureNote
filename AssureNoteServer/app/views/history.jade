+template("history_tmpl")
    .panel.panel-default.history-menu
        .panel-body
            a.panel-close#history-panel-close(style="position: absolute; top: -11px; right: -11px;", href="#")
              span.glyphicon.glyphicon-remove-circle(style="font-size: 24px;")
            h4.list-group-item-heading ${Message}
            p.list-group-item-text
              small
                span.glyphicon.glyphicon-user
                | &nbsp; ${User} &nbsp;
                span.glyphicon.glyphicon-time
                | &nbsp;
                a#history-panel-date(data-toggle="tooltip", data-placement="bottom" , title="${DateTimeString}") ${DateTime}
                br
                a#history-panel-count(data-toggle="tooltip", data-placement="bottom") ${Count.All} Nodes

            .list-group-item-text(style="padding-top: 10px")
                .btn-group
                    a.btn.btn-default#first-revision(href='#')
                        span.glyphicon.glyphicon-fast-backward
                    a.btn.btn-default#prev-revision(href='#')
                        span.glyphicon.glyphicon-chevron-left
                    a.btn.btn-default#next-revision(href='#')
                        span.glyphicon.glyphicon-chevron-right
                    a.btn.btn-default#last-revision(href='#')
                        span.glyphicon.glyphicon-fast-forward
#history(style="position: absolute; top: 60px; left: 10px; width: 260px;")
